{
  "title": "order",
  "id": "schemas/order/order",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "compact=true then ONLY path, id, jobChain and _type are responded",
  "required": [
    "path",
    "orderId",
    "jobChain"
  ],
  "properties": {
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "orderId": {
      "type": "string"
    },
    "jobChain": {
      "$ref": "../common/path-schema.json"
    },
    "priority": {
      "$ref": "../common/nonNegativeInteger-schema.json",
      "default": 0
    },
    "params": {
      "$ref": "../common/nameValuePairs-schema.json"
    },
    "_type": {
      "description": "the type of the order",
      "type": "string",
      "enum": [
        "permanent",
        "ad_hoc",
        "file_order"
      ],
      "javaEnumNames": [
        "permanent",
        "ad_hoc",
        "file_order"
      ]
    }
  }
}
