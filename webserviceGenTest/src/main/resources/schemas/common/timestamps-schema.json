{
  "title": "delivery and survey date (permant or volatile)",
  "id": "schemas/common/timestamps",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "timestamps of requests to JOC server only such as register event, login, etc.",
      "required": [
        "deliveryDate"
      ]
    },
    {
      "description": "timestamps of permanent requests",
      "required": [
        "deliveryDate",
        "surveyDate"
      ]
    },
    {
      "description": "timestamps of volatile requests",
      "required": [
        "deliveryDate",
        "surveyDate"
      ]
    }
  ],
  "properties": {
    "deliveryDate": {
      "$ref": "../common/deliveryDate-schema.json"
    },
    "surveyDate": {
      "type": "string",
      "format": "date-time"
    }
  }
}
