{
  "title": "job object (permanent part)",
  "id": "schemas/job/job_p",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "as child of nodes only path is required and nothing optional",
      "required": [
        "path"
      ]
    },
    {
      "description": "parameter compact=true; all other fields below are optional otherwise only title is optional",
      "required": [
        "surveyDate",
        "path",
        "name",
        "isOrderJob",
        "usedInJobChains",
        "estimatedDuration"
      ]
    }
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_p-schema.json"
    },
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "isOrderJob": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "estimatedDuration": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "processClass": {
      "$ref": "../common/path-schema.json"
    },
    "maxTasks": {
      "$ref": "../common/nonNegativeInteger-schema.json",
      "default": 1
    },
    "params": {
      "$ref": "../common/nameValuePairs-schema.json"
    },
    "locks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "exclusive"
        ],
        "properties": {
          "path": {
            "$ref": "../common/path-schema.json"
          },
          "exclusive": {
            "type": "boolean"
          }
        }
      }
    },
    "usedInJobChains": {
      "description": "Only relevant for order jobs",
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "jobChains": {
      "description": "Only relevant for order jobs when called /jobs/p/... or job/p/...",
      "type": "array",
      "items": {
        "$ref": "../common/path-schema.json"
      }
    },
    "hasDescription": {
      "type": "boolean",
      "default": false
    },
    "configurationDate": {
      "$ref": "../common/timestamp-schema.json"
    }
  }
}
