{
  "title": "job (volatile part)",
  "id": "schemas/job/job_v",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "as child of nodes only path and state are required; only configurationStatus is optional",
      "required": [
        "path",
        "state"
      ]
    },
    {
      "description": "parameter compact=true; only locks and configurationStatus are optional",
      "required": [
        "surveyDate",
        "path",
        "name",
        "state",
        "stateText",
        "ordersSummary",
        "numOfRunningTasks",
        "numOfQueuedTasks"
      ]
    },
    {
      "description": "parameter compact=false or undefined; all other fields below are optional",
      "required": [
        "surveyDate",
        "path",
        "name",
        "state",
        "stateText",
        "ordersSummary",
        "numOfRunningTasks",
        "numOfQueuedTasks",
        "allTasks",
        "allSteps"
      ]
    }
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_v-schema.json"
    },
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "nextPeriodBegin": {
      "description": "only relevant for order jobs if state.text=not_in_period",
      "type": "string",
      "format": "time"
    },
    "orderQueue": {
      "description": "Only for /job/orderQueue",
      "type": "array",
      "items": {
        "$ref": "../order/order_v-schema.json"
      }
    },
    "allTasks": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "allSteps": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "state": {
      "type": "object",
      "required": [
        "severity",
        "_text"
      ],
      "properties": {
        "severity": {
          "description": "0=running; 1=pending; 2=not_initialized/waiting_for_agent/stopping/stopped/removed, 3=initialized/loaded/waiting_for_process/waiting_for_lock/waiting_for_task/not_in_period, 4=disabled",
          "type": "integer"
        },
        "_text": {
          "type": "string",
          "enum": [
            "initialized",
            "not_initialized",
            "loaded",
            "pending",
            "running",
            "waiting_for_process",
            "waiting_for_lock",
            "waiting_for_agent",
            "waiting_for_task",
            "not_in_period",
            "stopping",
            "stopped",
            "removed",
            "disabled"
          ],
          "javaEnumNames": [
            "initialized",
            "not_initialized",
            "loaded",
            "pending",
            "running",
            "waiting_for_process",
            "waiting_for_lock",
            "waiting_for_agent",
            "waiting_for_task",
            "not_in_period",
            "stopping",
            "stopped",
            "removed",
            "disabled"
          ]
        }
      }
    },
    "stateText": { "type": "string" },
    "locks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "exclusive",
          "available"
        ],
        "properties": {
          "path": {
            "$ref": "../common/path-schema.json"
          },
          "available": { "type": "boolean" },
          "exclusive": { "type": "boolean" }
        }
      }
    },
    "temporary": {
      "type": "boolean",
      "default": false
    },
    "numOfRunningTasks": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "runningTasks": {
      "type": "array",
      "items": {
        "$ref": "runningTask-schema.json"
      }
    },
    "numOfQueuedTasks": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "taskQueue": {
      "type": "array",
      "items": {
        "$ref": "queuedTask-schema.json"
      }
    },
    "params": {
      "$ref": "../common/nameValuePairs-schema.json"
    },
    "configurationStatus": {
      "$ref": "../common/configurationStatus-schema.json"
    },
    "ordersSummary": {
      "description": "only relevant for order jobs and is empty if job's order queue is empty",
      "type": "object",
      "properties": {
        "pending": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        },
        "running": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        },
        "suspended": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        },
        "setback": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        },
        "waitingForResource": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        }
      }
    },
    "nextStartTime": {
      "description": "Only relevant for standalone jobs",
      "$ref": "../common/timestamp-schema.json"
    },
    "delayUntil": {
      "description": "Only relevant for standalone jobs with a delay_after_error configuration.",
      "$ref": "../common/timestamp-schema.json"
    }
  }
}
