{
  "title": "running task",
  "id": "schemas/job/runningTask",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "task object of an order job which is running",
  "required": [
    "taskId",
    "startedAt"
  ],
  "properties": {
    "taskId": {
      "type": "integer"
    },
    "pid": {
      "type": "integer"
    },
    "startedAt": {
      "$ref": "../common/timestamp-schema.json"
    },
    "enqueued": {
      "$ref": "../common/timestamp-schema.json"
    },
    "idleSince": {
      "$ref": "../common/timestamp-schema.json"
    },
    "steps": {
      "type": "integer"
    },
    "cause": {
      "description": "For order jobs only cause=order possible",
      "type": "string",
      "enum": [
        "none",
        "min_tasks",
        "period_once",
        "period_single",
        "period_repeat",
        "queue",
        "queue_at",
        "directory",
        "delay_after_error",
        "order"
      ],
      "javaEnumNames": [
        "none",
        "min_tasks",
        "period_once",
        "period_single",
        "period_repeat",
        "queue",
        "queue_at",
        "directory",
        "delay_after_error",
        "order"
      ]
    },
    "order": {
      "description": "Only relevant for order jobs; cause=order resp.",
      "type": "object",
      "required": [
        "path",
        "orderId",
        "jobChain",
        "state"
      ],
      "properties": {
        "path": {
          "$ref": "../common/path-schema.json"
        },
        "orderId": {
          "type": "string"
        },
        "jobChain": {
          "$ref": "../common/path-schema.json"
        },
        "state": {
          "description": "name of the current node",
          "type": "string"
        },
        "inProcessSince": {
          "$ref": "../common/timestamp-schema.json"
        }
      }
    }
  }
}
