{
  "title": "holiday",
  "id": "schemas/calendar/holiday",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "weekdays",
    "dates"
  ],
  "properties": {
    "weekdays": {
      "type": "array",
      "minItems": 0,
      "items": {
        "description": "0=sunday, 1=monday, ..., 6=saturday",
        "type": "integer",
        "minimum": 0,
        "maximum": 6
      }
    },
    "dates": {
      "type": "array",
      "minItems": 0,
      "items": {
        "description": "date in the format of YYYY-MM-DD",
        "type": "string",
        "format": "date"
      }
    }
  }
}
