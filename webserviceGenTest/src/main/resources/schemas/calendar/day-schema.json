{
  "title": "day",
  "id": "schemas/calendar/day",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "date",
    "orders",
    "jobs"
  ],
  "properties": {
    "date": {
      "description": "YYYY-MM-DD",
      "type": "string",
      "format": "date"
    },
    "orders": {
      "type": "array",
      "items": {
        "$ref": "runtime-schema.json"
      }
    },
    "jobs": {
      "type": "array",
      "items": {
        "$ref": "runtime-schema.json"
      }
    }
  }
}
