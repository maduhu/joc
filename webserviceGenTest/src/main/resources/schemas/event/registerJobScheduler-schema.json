{
  "title": "register, unregister or collect event",
  "id": "schemas/event/registerJobScheduler",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "required": [
        "jobscheduler",
        "master"
      ]
    },
    {
      "required": [
        "jobscheduler",
        "supervisor"
      ]
    },
    {
      "required": [
        "jobscheduler",
        "agent"
      ]
    }
  ],
  "properties": {
    "jobscheduler": {
      "$ref": "../common/master-schema.json"
    },
    "master": {
      "$ref": "../common/master-schema.json"
    },
    "supervisor": {
      "$ref": "../common/master-schema.json"
    },
    "agent": {
      "description": "agent's url",
      "type": "string",
      "pattern": "https?://.*"
    }
  }
}
