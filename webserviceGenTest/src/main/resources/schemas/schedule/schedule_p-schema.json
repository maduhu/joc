{
  "title": "schedule (permant part)",
  "id": "schemas/schedule/schedule_p",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "parameter compact=true; title and substitute are optional",
      "required": [
        "surveyDate",
        "path",
        "name"
      ]
    },
    {
      "description": "parameter compact=false all other fields below are optional",
      "required": [
        "surveyDate",
        "path",
        "name",
        "configurationDate"
      ]
    }
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_p-schema.json"
    },
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "substitute": {
      "description": "this field and substitutedBy from the volatile part are exclusive",
      "type": "object",
      "properties": {
        "path": {
          "$ref": "../common/path-schema.json"
        },
        "validFrom": {
          "$ref": "../common/timestamp-schema.json"
        },
        "validTo": {
          "$ref": "../common/timestamp-schema.json"
        }
      }
    },
    "usedByOrders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "jobChain": {
            "$ref": "../common/path-schema.json"
          },
          "orderId": {
            "type": "string"
          }
        }
      }
    },
    "usedByJobs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "job": {
            "$ref": "../common/path-schema.json"
          }
        }
      }
    },
    "configurationDate": {
      "$ref": "../common/timestamp-schema.json"
    }
  }
}
