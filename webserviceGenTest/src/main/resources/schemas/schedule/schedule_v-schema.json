{
  "title": "schedule",
  "id": "schemas/schedule/schedule_v",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "surveyDate",
    "path",
    "name",
    "state"
  ],
  "properties": {
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "state": {
      "type": "object",
      "required": [
        "severity",
        "_text"
      ],
      "properties": {
        "severity": {
          "description": "0=active; 1=inactive",
          "type": "integer"
        },
        "_text": {
          "type": "string",
          "enum": [
            "active",
            "inactive"
          ],
          "javaEnumNames": [
            "active",
            "inactive"
          ]
        }
      }
    },
    "substitutedBy": {
      "description": "this field and substitute from the permanent part are exclusive",
      "$ref": "../common/path-schema.json"
    },
    "configurationStatus": {
      "$ref": "../common/configurationStatus-schema.json"
    }
  }
}
