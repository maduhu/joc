{
  "title": "JobNode (volatile part)",
  "id": "schemas/jobchain/jobNode_v",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "parameter compact=true",
      "required": [
        "name",
        "state",
        "job",
        "numOfOrders"
      ]
    },
    {
      "description": "parameter compact=false or unset",
      "required": [
        "name",
        "state",
        "job",
        "numOfOrders",
        "orders"
      ]
    }
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "state": {
      "type": "object",
      "properties": {
        "severity": {
          "description": "5=skipped, 4=active, 2=stopped",
          "type": "integer"
        },
        "_text": {
          "type": "string",
          "enum": [
            "active",
            "skipped",
            "stopped"
          ],
          "javaEnumNames": [
            "active",
            "skipped",
            "stopped"
          ]
        }
      }
    },
    "job": {
      "$ref": "../job/job_v-schema.json"
    },
    "numOfOrders": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "orders": {
      "type": "array",
      "items": {
        "$ref": "../order/order_v-schema.json"
      }
    }
  }
}
