{
  "title": "nested job chain (permanent part)",
  "id": "schemas/jobChain/nestedJobChain_p",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "parameter compact=true, optional maxOrders, distributed, processClass, fileWatchingProcessClass",
      "required": [
        "surveyDate",
        "path",
        "name",
        "numOfOrders",
        "numOfNodes"
      ]
    },
    {
      "description": "parameter compact=false or unset, all other fields are optional",
      "required": [
        "surveyDate",
        "path",
        "name",
        "numOfOrders",
        "numOfNodes",
        "nodes"
      ]
    }
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_p-schema.json"
    },
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "maxOrders": {
      "description": "If the number of maximal orders is unlimited, then this field is undefined.",
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "distributed": {
      "type": "boolean",
      "default": false
    },
    "processClass": {
      "type": "string"
    },
    "fileWatchingProcessClass": {
      "type": "string"
    },
    "numOfNodes": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "jobNode_p-schema.json"
      }
    },
    "fileOrderSources": {
      "type": "array",
      "items": {
        "$ref": "fileWatchingNode_p-schema.json"
      }
    },
    "endNodes": {
      "description": "real end nodes or file sink nodes",
      "type": "array",
      "items": {
        "$ref": "endNode-schema.json"
      }
    },
    "numOfOrders": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "configurationDate": {
      "$ref": "../common/timestamp-schema.json"
    }
  }
}
