{
  "title": "job chain (volatile part)",
  "id": "schemas/jobChain/jobChain_v",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "parameter compact=true",
      "required": [
        "surveyDate",
        "path",
        "name",
        "state",
        "numOfOrders",
        "numOfNodes"
      ]
    },
    {
      "description": "parameter compact=false or unset",
      "required": [
        "surveyDate",
        "path",
        "name",
        "state",
        "numOfOrders",
        "numOfNodes",
        "nodes"
      ]
    }
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_v-schema.json"
    },
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "state": {
      "type": "object",
      "properties": {
        "severity": {
          "description": "0=running, 4=active, 3=initialized, 2=under_construction/stopped/not_initialized",
          "type": "integer",
          "minimum": 0,
          "maximum": 4
        },
        "_text": {
          "type": "string",
          "enum": [
            "not_initialized",
            "initialized",
            "active",
            "under_construction",
            "stopped"
          ],
          "javaEnumNames": [
            "not_initialized",
            "initialized",
            "active",
            "under_construction",
            "stopped"
          ]
        }
      }
    },
    "numOfNodes": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "jobChainNode_v-schema.json"
      }
    },
    "fileOrderSources": {
      "type": "array",
      "items": {
        "$ref": "fileWatchingNode_v-schema.json"
      }
    },
    "numOfOrders": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "configurationStatus": {
      "$ref": "../common/configurationStatus-schema.json"
    }
  }
}
