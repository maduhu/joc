{
  "title": "modify job chain node",
  "id": "schemas/jobChain/modifyNode",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "the command is part of the web servive url",
  "type": "object",
  "required": [
    "jobschedulerId",
    "nodes"
  ],
  "properties": {
    "jobschedulerId": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type" : "object",
        "required": [
          "jobChain",
          "node"
        ],
        "properties": {
          "jobChain": {
            "$ref": "../common/path-schema.json"
          },
          "node": {
            "type": "string"
          },
          "comment": {
            "description": "Field to comment this action which can be logged.",
            "type": "string"
          }
        }
      }
    }
  }
}
