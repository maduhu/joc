{
  "title": "jobChainNode (permanent part)",
  "id": "schemas/jobchain/jobChainNode_p",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "job chain node object with assigned a job",
      "required": [
        "name",
        "nextNode",
        "errorNode",
        "job"
      ]
    },
    {
      "description": "job chain node object with assigned a job chain",
      "required": [
        "name",
        "nextNode",
        "errorNode",
        "jobChain"
      ]
    }
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "nextNode": {
      "type": "string"
    },
    "errorNode": {
      "type": "string"
    },
    "job": {
      "$ref": "../job/job_p-schema.json"
    },
    "jobChain": {
      "description": "job chain object",
      "$ref": "nestedJobChain_p-schema.json"
    },
    "onError": {
      "type": "string",
      "enum": [
        "",
        "suspend",
        "setback"
      ],
      "javaEnumNames": [
        "",
        "suspend",
        "setback"
      ]
    },
    "delay": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    }
  }
}
