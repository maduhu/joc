{
  "title": "JobScheduler cluster members",
  "id": "schemas/jobscheduler/clusterMembers",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "jobschedulerId",
    "type",
    "members"
  ],
  "properties": {
    "jobschedulerId": {
      "description": "JobScheduler id of all cluster member",
      "type": "string"
    },
    "type": {
      "description": "type could be 'active' (distributed orders), 'passive' (backup) or 'standalone' (without cluster)",
      "type": "string",
      "enum": [
        "active",
        "passive",
        "standalone"
      ],
      "javaEnumNames": [
        "active",
        "passive",
        "standalone"
      ]
    },
    "members": {
      "type": "array",
      "items": {
        "$ref": "clusterMember-schema.json"
      }
    }
  }
}
