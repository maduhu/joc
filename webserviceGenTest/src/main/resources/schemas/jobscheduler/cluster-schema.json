{
  "title": "jobscheduler cluster",
  "id": "schemas/jobscheduler/cluster",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "deliveryDate",
    "cluster"
  ],
  "properties": {
    "deliveryDate": {
      "$ref": "../common/deliveryDate-schema.json"
    },
    "cluster": {
      "type": "object",
      "required": [
        "surveyDate",
        "jobschedulerId",
        "type"
      ],
      "properties": {
        "surveyDate": {
          "$ref": "../common/surveyDate_p-schema.json"
        },
        "jobschedulerId": {
          "description": "JobScheduler id of all cluster member",
          "type": "string"
        },
        "type": {
          "description": "type could be 'active' (distributed orders), 'passive' (backup) or 'standalone' (without cluster)",
          "type": "string",
          "enum": [
            "active",
            "passive",
            "standalone"
          ],
          "javaEnumNames": [
            "active",
            "passive",
            "standalone"
          ]
        }
      }
    }
  }
}
