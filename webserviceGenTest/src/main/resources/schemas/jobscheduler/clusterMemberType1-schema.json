{
  "title": "jobscheduler cluster member type",
  "id": "schemas/jobscheduler/clusterMemberType",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "required": [
        "standalone"
      ]
    },
    {
      "required": [
        "active"
      ]
    },
    {
      "required": [
        "passive"
      ]
    }
  ],
  "properties": {
    "standalone": {
      "description": "JobScheduler doesn't run in a cluster",
      "type": "boolean"
    },
    "active": {
      "description": "JobScheduler is member of an active cluster (distributed orders)",
      "type": "boolean"
    },
    "passive": {
      "type": "object",
      "description": "JobScheduler is member of a passive cluster (backup)",
      "properties": {
        "active": {
          "type": "boolean"
        },
        "precedence": {
          "description": "primary",
          "type": "integer"
        }
      }
    }
  }
}
