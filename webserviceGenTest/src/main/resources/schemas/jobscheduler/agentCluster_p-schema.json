{
  "title": "agent cluster (permant part)",
  "id": "schemas/jobscheduler/agentCluster_p",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "oneOf": [
    {
      "description": "if parameter compact=false or undefined",
      "required": [
        "surveyDate",
        "path",
        "maxProcesses",
        "_type",
        "state",
        "numOfAgents",
        "agents"
      ]
    },
    {
      "description": "response without agents collection if parameter compact=true",
      "required": [
        "surveyDate",
        "path",
        "maxProcesses",
        "_type",
        "state",
        "numOfAgents"
      ]
    }
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_p-schema.json"
    },
    "path": {
      "description": "Agent cluster name: path of the process class which represents the agent cluster",
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "maxProcesses": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "_type": {
      "type": "string",
      "enum": [
        "single_agent",
        "fix_priority",
        "round_robin"
      ],
      "javaEnumNames": [
        "single_agent",
        "fix_priority",
        "round_robin"
      ]
    },
    "state": {
      "$ref": "agentClusterState-schema.json"
    },
    "numOfAgents": {
      "type": "object",
      "required": [
        "any",
        "running"
      ],
      "properties": {
        "any": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        },
        "running": {
          "$ref": "../common/nonNegativeInteger-schema.json"
        }
      }
    },
    "agents": {
      "type": "array",
      "items": {
        "$ref": "agentOfCluster_p-schema.json"
      }
    }
  }
}
